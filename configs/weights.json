{
  "output": {
    "weights_dir": ".weights",
    "logs_dir": ".logs",
    "checkpoints_dir": ".logs/checkpoints"
  },

  "training_defaults": {
    "batch_size": 32,
    "learning_rate": 0.001,
    "weight_decay": 1e-5,
    "max_epochs": 100,
    "patience": 10,
    "gradient_clip": 1.0,
    "optimizer": "adamw",
    "optimizer_betas": [0.9, 0.999],
    "scheduler": "cosine",
    "scheduler_min_lr_ratio": 0.01,
    "warmup_epochs": 5
  },

  "runs": {
    "gcn_default": {
      "description": "GCN trained on default problem set",
      "model": "gcn",
      "data_preset": "time_default",
      "output_weights": "gcn.safetensors"
    },

    "gcn_unit_equality": {
      "description": "GCN trained on unit equality problems",
      "model": "gcn",
      "data_preset": "time_unit_equality",
      "output_weights": "gcn_unit_eq.safetensors"
    },

    "gcn_large_default": {
      "description": "Large GCN trained on default problem set",
      "model": "gcn_large",
      "data_preset": "time_default",
      "output_weights": "gcn_large.safetensors",
      "batch_size": 16,
      "learning_rate": 0.0005
    },

    "gat_default": {
      "description": "GAT trained on default problem set",
      "model": "gat",
      "data_preset": "time_default",
      "output_weights": "gat.safetensors"
    },

    "mlp_default": {
      "description": "MLP baseline trained on default problem set",
      "model": "mlp",
      "data_preset": "time_default",
      "output_weights": "mlp.safetensors"
    },

    "mlp_unit_equality": {
      "description": "MLP trained on unit equality problems",
      "model": "mlp",
      "data_preset": "time_unit_equality",
      "output_weights": "mlp_unit_eq.safetensors"
    },

    "transformer_default": {
      "description": "Transformer trained on default problem set",
      "model": "transformer",
      "data_preset": "time_default",
      "output_weights": "transformer.safetensors",
      "batch_size": 16,
      "learning_rate": 0.0001,
      "warmup_epochs": 10
    }
  }
}
