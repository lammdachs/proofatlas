{
  "defaults": {
    "batch_size": 32,
    "max_epochs": 100,
    "val_ratio": 0.2,
    "patience": 10,
    "margin": 0.1,

    "optimizer": "adamw",
    "learning_rate": 0.0003,
    "weight_decay": 1e-4,
    "betas": [0.9, 0.999],
    "gradient_clip": 1.0
  },

  "configs": {
    "standard": {
      "description": "Standard training with 20% validation split"
    },

    "no_val": {
      "description": "Training without validation split",
      "val_ratio": 0.0
    },

    "quick": {
      "description": "Quick training for testing",
      "max_epochs": 20
    },

    "quick_val": {
      "description": "Quick training with validation",
      "max_epochs": 20,
      "val_ratio": 0.2
    },

    "long": {
      "description": "Extended training for better convergence",
      "max_epochs": 200
    },

    "sgd": {
      "description": "SGD with momentum",
      "optimizer": "sgd",
      "learning_rate": 0.01,
      "momentum": 0.9
    }
  }
}
