{
  "paths": {
    "binary": "rust/target/release/prove"
  },

  "defaults": {
    "preset": "time_sel21"
  },

  "presets": {
    "time_sel0": {
      "description": "10s with sel0 (all literals)",
      "timeout": 10,
      "literal_selection": 0,
      "age_weight_ratio": 0.167
    },

    "time_sel20": {
      "description": "10s with sel20 (all maximal literals)",
      "timeout": 10,
      "literal_selection": 20,
      "age_weight_ratio": 0.167
    },

    "time_sel21": {
      "description": "10s with sel21 (unique maximal, else neg max-weight, else all maximal)",
      "timeout": 10,
      "literal_selection": 21,
      "age_weight_ratio": 0.167
    },

    "time_sel22": {
      "description": "10s with sel22 (neg max-weight, else all maximal)",
      "timeout": 10,
      "literal_selection": 22,
      "age_weight_ratio": 0.167
    },

    "steps_sel0": {
      "description": "128 iterations with sel0",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 0,
      "age_weight_ratio": 0.167
    },

    "steps_sel20": {
      "description": "128 iterations with sel20",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 20,
      "age_weight_ratio": 0.167
    },

    "steps_sel21": {
      "description": "128 iterations with sel21",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 21,
      "age_weight_ratio": 0.167
    },

    "steps_sel22": {
      "description": "128 iterations with sel22",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 22,
      "age_weight_ratio": 0.167
    },

    "gcn_mlp": {
      "description": "128 iterations with GCN embedding + MLP scorer",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 22,
      "embedding": "gcn",
      "scorer": "mlp"
    },

    "sentence_mlp": {
      "description": "128 iterations with sentence transformer + MLP scorer (CPU)",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 22,
      "selector": "sentence"
    },

    "sentence_onnx": {
      "description": "128 iterations with ONNX GPU sentence transformer + MLP scorer",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 22,
      "selector": "sentence_onnx"
    },

    "sentence_torch": {
      "description": "128 iterations with PyTorch GPU sentence transformer + MLP scorer",
      "timeout": 600,
      "max_iterations": 128,
      "literal_selection": 22,
      "selector": "sentence_torch"
    }
  }
}
