{
  "version": "9.0.0",
  "source": "https://tptp.org/TPTP/Archive/TPTP-v9.0.0.tgz",

  "paths": {
    "root": ".tptp/TPTP-v9.0.0",
    "problems": ".tptp/TPTP-v9.0.0/Problems",
    "axioms": ".tptp/TPTP-v9.0.0/Axioms"
  },

  "defaults": {
    "problem_set": "unsat100"
  },

  "problem_sets": {
    "unsat100": {
      "description": "Unsatisfiable problems with at most 100 clauses",
      "status": ["unsatisfiable"],
      "format": ["cnf", "fof"],
      "max_clauses": 100,
      "max_term_depth" : 8,
      "exclude_domains": ["CSR", "HWV", "SWV"]
    },

    "test": {
      "description": "Small test set for quick iteration",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "max_rating": 0.3,
      "max_clauses": 50,
      "max_term_depth": 4,
      "domains": ["PUZ", "SYN"]
    },

    "unit_equality": {
      "description": "Unit equality problems (simpler, good for initial experiments)",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "has_equality": true,
      "is_unit_only": true,
      "max_rating": 0.5,
      "max_clauses": 500,
      "domains": ["GRP", "RNG", "LAT", "BOO", "COL"]
    },

    "krs": {
      "description": "KRS domain problems for testing deep formulas",
      "status": ["unsatisfiable"],
      "format": ["cnf", "fof"],
      "domains": ["KRS"]
    },

    "parser_test": {
      "description": "Problems testing parser fixes (nested biconditionals + quoted identifiers)",
      "problems_file": ".data/parser_test_problems.txt"
    }
  }
}
