{
  "version": "9.0.0",
  "source": "https://tptp.org/TPTP/Archive/TPTP-v9.0.0.tgz",

  "paths": {
    "root": ".tptp/TPTP-v9.0.0",
    "problems": ".tptp/TPTP-v9.0.0/Problems",
    "axioms": ".tptp/TPTP-v9.0.0/Axioms"
  },

  "problem_sets": {
    "default": {
      "description": "Default problem set for training",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "max_rating": 0.8,
      "min_clauses": 1,
      "max_clauses": 1000,
      "exclude_domains": ["CSR", "HWV", "SWV"]
    },

    "test": {
      "description": "Small test set for quick iteration",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "max_rating": 0.3,
      "max_clauses": 50,
      "domains": ["PUZ", "SYN"]
    },

    "unit_equality": {
      "description": "Unit equality problems (simpler, good for initial experiments)",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "has_equality": true,
      "is_unit_only": true,
      "max_rating": 0.5,
      "max_clauses": 500,
      "domains": ["GRP", "RNG", "LAT", "BOO", "COL"]
    },

    "hard": {
      "description": "Challenging problems for evaluation",
      "status": ["unsatisfiable"],
      "format": ["cnf"],
      "min_rating": 0.5,
      "max_rating": 1.0,
      "max_clauses": 2000
    }
  }
}
